<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/proposition_card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal|top">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/proposition_image"
            android:contentDescription="proposition item image"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="120dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/proposition_image"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="10dp" />

    </FrameLayout>

    <!-- FOOTER -->
    <FrameLayout
        android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:background="@drawable/line"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <!-- menu bar -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_plus_icon"
                android:id="@+id/like_image_button"
                android:layout_margin="10dp"
                android:layout_gravity="left|center_vertical" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/dislike_image_button"
                android:textSize="25sp"
                android:textColor="@color/dressin_likes_number_color"
                android:text="12"
                android:layout_marginTop="5dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_share"
                android:id="@+id/share_button"
                android:layout_margin="10dp"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/choose_button"
            android:text="Get it!"
            android:layout_margin="10dp"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

</LinearLayout>